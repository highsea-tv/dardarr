{
    "name": "dardarr",
    "type": "module",
    "private": true,
    "scripts": {
        "dev:app": "pnpm --filter @dardarr/app run dev",
        "build:app": "pnpm --filter @dardarr/app run build",
        "preview:app": "pnpm --filter @dardarr/app run preview",
        "watch:schema": "nodemon ./scripts/generate-json-schema-types.js",
        "dev": "concurrently --kill-others --names app,schema \"pnpm run dev:app\" \"pnpm run watch:schema\"",
        "lint": "prettier --check . && eslint . && stylelint .",
        "format": "prettier --write . && eslint --fix . && stylelint --fix ."
    },
    "devDependencies": {
        "@dardarr/app": "workspace:*",
        "@packages/apps": "workspace:*",
        "@packages/components": "workspace:*",
        "@packages/config": "workspace:*",
        "@packages/core": "workspace:*",
        "@packages/data": "workspace:*",
        "@packages/locales": "workspace:*",
        "@packages/schema": "workspace:*",
        "@packages/styles": "workspace:*",
        "@packages/themes": "workspace:*",
        "@packages/types": "workspace:*",
        "@packages/utilities": "workspace:*",
        "@sveltejs/adapter-node": "^1.3.1",
        "@sveltejs/kit": "^1.26.0",
        "@types/lodash": "^4.14.200",
        "@types/node": "^20.8.7",
        "@types/sqlite3": "^3.1.10",
        "@types/uuid": "^9.0.6",
        "@typescript-eslint/eslint-plugin": "^6.8.0",
        "@typescript-eslint/parser": "^6.8.0",
        "autoprefixer": "^10.4.16",
        "chokidar": "^3.5.3",
        "concurrently": "^8.2.2",
        "cssnano": "^6.0.1",
        "cssnano-preset-lite": "^3.0.0",
        "eslint": "^8.51.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "glob": "^10.3.10",
        "json-schema-to-typescript": "^13.1.1",
        "nodemon": "^3.0.1",
        "postcss": "^8.4.31",
        "postcss-import": "^15.1.0",
        "postcss-load-config": "^4.0.1",
        "postcss-nested": "^6.0.1",
        "prettier": "^3.0.3",
        "prettier-plugin-css-order": "^2.0.1",
        "prettier-plugin-svelte": "^3.0.3",
        "reflect-metadata": "^0.1.13",
        "stylelint": "^15.11.0",
        "stylelint-config-standard": "^34.0.0",
        "svelte": "^4.2.2",
        "svelte-check": "^3.5.2",
        "tslib": "^2.6.2",
        "typescript": "^5.2.2",
        "unplugin-auto-import": "^0.16.6",
        "vite": "^4.5.0",
        "vite-plugin-dts": "^3.6.0",
        "vite-plugin-mkcert": "^1.16.0",
        "vite-plugin-watch": "^0.2.0",
        "vite-raw-plugin": "^1.0.2"
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "dotenv": "^16.3.1",
        "gridstack": "^9.4.0",
        "lodash": "^4.17.21",
        "sqlite": "^5.0.1",
        "sqlite3": "^5.1.6",
        "uuid": "^9.0.1",
        "zod": "^3.22.4"
    }
}
